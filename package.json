{
    "name": "badersur.github.io",
    "private": true,
    "description": "A simple Progressive Web App using React and Gatsby",
    "version": "5.20.0",
    "author": "Bader Nasser <BaderSur@gmail.com>",
    "license": "MIT",
    "scripts": {
        "clean": "gatsby clean",
        "type-check": "tsc --noEmit",
        "lint:prettier": "prettier -c '**/*.{html,json,yml,yaml,css,md}'",
        "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint": "run-s lint:*",
        "fmt:prettier": "run-s \"lint:prettier -- --write\"",
        "fmt:eslint": "run-s \"lint:eslint -- --fix\"",
        "fmt": "run-s fmt:*",
        "test": "run-s type-check lint",
        "prebuild": "run-s test clean",
        "build": "gatsby build",
        "postbuild": "echo \"\nSitemap: ${siteUrl}/sitemap.xml\" >> public/robots.txt",
        "predevelop": "run-s prebuild",
        "develop": "gatsby develop",
        "predevelop:docker": "docker-compose build",
        "develop:docker": "docker-compose up",
        "start": "gatsby develop",
        "preserve": "run-s build",
        "serve": "gatsby serve",
        "preserve:docker": "docker build -t bs-app .",
        "serve:docker": "docker run --rm --detach --publish 9000:9000 bs-app",
        "serve:only": "gatsby serve",
        "prebash:docker": "docker build -t bs-app .",
        "bash:docker": "docker-compose run --rm app bash",
        "amend": "git commit --amend --no-edit --date=\"$(date)\"",
        "amend-all": "run-s \"amend -- --all\"",
        "amend-q": "cross-env HUSKY_SKIP_HOOKS=1 run-s amend",
        "amend-all-q": "cross-env HUSKY_SKIP_HOOKS=1 run-s amend-all"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/badersur/badersur.github.io"
    },
    "bugs": {
        "url": "https://github.com/badersur/badersur.github.io/issues"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.30",
        "@fortawesome/free-brands-svg-icons": "^5.14.0",
        "@fortawesome/free-solid-svg-icons": "^5.14.0",
        "@fortawesome/react-fontawesome": "^0.1.11",
        "commonmark": "^0.29.2",
        "gatsby": "^2.24.57",
        "gatsby-image": "^2.4.17",
        "gatsby-plugin-catch-links": "^2.3.11",
        "gatsby-plugin-google-analytics": "^2.3.13",
        "gatsby-plugin-manifest": "^2.4.28",
        "gatsby-plugin-offline": "^3.2.27",
        "gatsby-plugin-react-helmet": "^3.3.10",
        "gatsby-plugin-sharp": "^2.6.35",
        "gatsby-plugin-sitemap": "^2.4.12",
        "gatsby-plugin-typescript": "^2.4.19",
        "gatsby-source-filesystem": "^2.3.29",
        "gatsby-transformer-sharp": "^2.5.14",
        "gatsby-transformer-yaml": "^2.4.11",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-helmet": "^5.2.1"
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@types/commonmark": "^0.27.4",
        "@types/node": "^13.13.19",
        "@types/react": "^16.9.49",
        "@types/react-dom": "^16.9.8",
        "@types/react-helmet": "^5.0.16",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "cross-env": "^7.0.2",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.6",
        "eslint-plugin-react-hooks": "^2.5.1",
        "husky": "^4.3.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.1.1",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7"
    },
    "husky": {
        "hooks": {
            "pre-commit": "run-s build"
        }
    }
}
