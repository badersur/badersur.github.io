{
	"name": "badersur.github.io",
	"description": "A personal web app using React, Gatsby & TypeScript",
	"private": true,
	"version": "5.25.0",
	"author": {
		"name": "Bader Nasser Al-Hashmi",
		"email": "BaderSur@gmail.com",
		"url": "https://badersur.github.io"
	},
	"license": "MIT",
	"engines": {
		"node": ">=12",
		"yarn": ">=1.22.0"
	},
	"scripts": {
		"clean": "gatsby clean",
		"type-check": "tsc --noEmit",
		"lint:prettier": "prettier -c .",
		"lint:scripts": "xo",
		"lint:styles": "stylelint .",
		"lint": "run-s lint:*",
		"fmt:prettier": "prettier --write .",
		"fmt:scripts": "xo --fix",
		"fmt:styles": "stylelint . --fix",
		"fmt": "run-s fmt:*",
		"test": "run-s type-check lint",
		"prebuild": "run-s test clean",
		"build": "gatsby build",
		"postbuild": "echo \"\nSitemap: ${siteUrl}/sitemap.xml\" >> public/robots.txt",
		"predevelop": "run-s prebuild",
		"develop": "gatsby develop",
		"predevelop:docker": "docker-compose build",
		"develop:docker": "docker-compose up",
		"start": "gatsby develop",
		"preserve": "run-s build",
		"serve": "gatsby serve",
		"preserve:docker": "docker build -t bs-app .",
		"serve:docker": "docker run --rm --detach --publish 9000:9000 bs-app",
		"serve:only": "gatsby serve",
		"prebash:docker": "docker build -t bs-app .",
		"bash:docker": "docker-compose run --rm app bash",
		"amend": "git commit --amend --no-edit --date=\"$(date)\"",
		"amend-all": "run-s \"amend -- --all\"",
		"amend-q": "cross-env HUSKY_SKIP_HOOKS=1 run-s amend",
		"amend-all-q": "cross-env HUSKY_SKIP_HOOKS=1 run-s amend-all",
		"push-f": "git push -f"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/badersur/badersur.github.io.git"
	},
	"bugs": "https://github.com/badersur/badersur.github.io/issues",
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^1.2.32",
		"@fortawesome/free-brands-svg-icons": "^5.15.1",
		"@fortawesome/free-solid-svg-icons": "^5.15.1",
		"@fortawesome/react-fontawesome": "^0.1.12",
		"commonmark": "^0.29.2",
		"gatsby": "^2.25.0",
		"gatsby-image": "^2.4.21",
		"gatsby-plugin-catch-links": "^2.3.15",
		"gatsby-plugin-google-analytics": "^2.4.0",
		"gatsby-plugin-manifest": "^2.5.0",
		"gatsby-plugin-offline": "^3.3.0",
		"gatsby-plugin-postcss": "^3.0.4",
		"gatsby-plugin-react-helmet": "^3.3.14",
		"gatsby-plugin-sharp": "^2.7.0",
		"gatsby-plugin-sitemap": "^2.5.0",
		"gatsby-plugin-typescript": "^2.5.0",
		"gatsby-source-filesystem": "^2.4.0",
		"gatsby-transformer-sharp": "^2.5.21",
		"gatsby-transformer-yaml": "^2.4.15",
		"postcss": "^8.1.4",
		"postcss-preset-env": "^6.7.0",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-helmet": "^6.1.0"
	},
	"devDependencies": {
		"@babel/core": "^7.12.3",
		"@types/commonmark": "^0.27.4",
		"@types/node": "^14.14.6",
		"@types/postcss-preset-env": "^6.7.0",
		"@types/react": "^16.9.55",
		"@types/react-dom": "^16.9.9",
		"@types/react-helmet": "^6.1.0",
		"@typescript-eslint/eslint-plugin": "^4.6.0",
		"@typescript-eslint/parser": "^4.6.0",
		"cross-env": "^7.0.2",
		"eslint": "^7.12.1",
		"eslint-config-xo": "^0.33.1",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-config-xo-typescript": "^0.35.0",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"husky": "^4.3.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.1.2",
		"stylelint": "^13.7.2",
		"stylelint-config-standard": "^20.0.0",
		"stylelint-config-xo": "^0.20.0",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.5",
		"xo": "^0.34.1"
	},
	"xo": {
		"envs": [
			"es2020",
			"node",
			"browser"
		],
		"extends": [
			"xo-react",
			"plugin:jsx-a11y/recommended",
			"plugin:jsx-a11y/strict"
		],
		"plugins": [
			"jsx-a11y"
		],
		"globals": [
			"__PATH_PREFIX__"
		],
		"rules": {
			"capitalized-comments": "off",
			"import/no-unassigned-import": "warn",
			"@typescript-eslint/no-unused-vars": "warn",
			"react/jsx-key": "warn",
			"react/no-danger": "warn",
			"react/jsx-pascal-case": [
				"error",
				{
					"allowAllCaps": false,
					"ignore": [
						"SEO"
					]
				}
			],
			"react/jsx-tag-spacing": [
				"error",
				{
					"closingSlash": "never",
					"beforeSelfClosing": "always",
					"afterOpening": "never",
					"beforeClosing": "never"
				}
			]
		},
		"overrides": [
			{
				"files": "**/*.js",
				"rules": {
					"@typescript-eslint/no-unused-vars": "off"
				}
			}
		]
	},
	"prettier": {
		"semi": true,
		"tabWidth": 4,
		"useTabs": true,
		"printWidth": 80,
		"endOfLine": "lf",
		"singleQuote": true,
		"trailingComma": "none",
		"overrides": [
			{
				"files": [
					"*.yml",
					"*.yaml"
				],
				"options": {
					"useTabs": false,
					"tabWidth": 2
				}
			}
		]
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard",
			"stylelint-config-xo"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "run-s build"
		}
	}
}
