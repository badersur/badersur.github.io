{
    "name": "badersur.github.io",
    "private": true,
    "description": "A simple Progressive Web App using React and Gatsby",
    "version": "5.19.0",
    "author": "Bader Nasser <BaderSur@gmail.com>",
    "license": "MIT",
    "scripts": {
        "i": "npm i",
        "type-check": "tsc --noEmit",
        "clean": "gatsby clean",
        "lint:prettier": "prettier -c '**/*.{html,json,yml,yaml,css,md}'",
        "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint": "run-p lint:*",
        "fmt:prettier": "run-s \"lint:prettier -- --write\"",
        "fmt:eslint": "run-s \"lint:eslint -- --fix\"",
        "fmt": "run-p fmt:*",
        "prebuild": "run-s type-check lint clean",
        "build": "gatsby build",
        "postbuild": "echo \"\nSitemap: ${siteUrl}/sitemap.xml\" >> public/robots.txt",
        "predevelop": "run-s prebuild",
        "develop": "gatsby develop",
        "predevelop:docker": "docker-compose build",
        "develop:docker": "docker-compose up",
        "start": "gatsby develop",
        "preserve": "run-s build",
        "serve": "gatsby serve",
        "preserve:docker": "docker build -t bs-app .",
        "serve:docker": "docker run --rm --detach --publish 9000:9000 bs-app",
        "serve:only": "gatsby serve",
        "prebash:docker": "docker build -t bs-app .",
        "bash:docker": "docker-compose run --rm app bash",
        "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\"",
        "check": "run-s i type-check fmt",
        "git-amend": "git commit --all --amend --no-edit --date=\"$(date)\"",
        "amend": "cross-env HUSKY_SKIP_HOOKS=1 run-s git-amend"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/badersur/badersur.github.io"
    },
    "bugs": {
        "url": "https://github.com/badersur/badersur.github.io/issues"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.28",
        "@fortawesome/free-brands-svg-icons": "^5.13.0",
        "@fortawesome/free-solid-svg-icons": "^5.13.0",
        "@fortawesome/react-fontawesome": "^0.1.9",
        "commonmark": "^0.29.1",
        "gatsby": "^2.21.0",
        "gatsby-image": "^2.4.0",
        "gatsby-plugin-catch-links": "^2.3.0",
        "gatsby-plugin-google-analytics": "^2.3.0",
        "gatsby-plugin-manifest": "^2.4.0",
        "gatsby-plugin-offline": "^3.2.0",
        "gatsby-plugin-react-helmet": "^3.3.0",
        "gatsby-plugin-sharp": "^2.6.0",
        "gatsby-plugin-sitemap": "^2.4.0",
        "gatsby-plugin-typescript": "^2.4.0",
        "gatsby-source-filesystem": "^2.3.0",
        "gatsby-transformer-sharp": "^2.5.0",
        "gatsby-transformer-yaml": "^2.4.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-helmet": "^5.2.1"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@types/commonmark": "^0.27.4",
        "@types/node": "^13.13.4",
        "@types/react": "^16.9.34",
        "@types/react-dom": "^16.9.6",
        "@types/react-helmet": "^5.0.15",
        "@typescript-eslint/eslint-plugin": "^2.29.0",
        "@typescript-eslint/parser": "^2.29.0",
        "acorn": "^6.4.1",
        "cross-env": "^7.0.2",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.19.0",
        "eslint-plugin-react-hooks": "^2.5.1",
        "graphql": "^14.6.0",
        "husky": "^4.2.5",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5",
        "ts-node": "^8.9.1",
        "typescript": "^3.8.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "run-s check"
        }
    }
}
